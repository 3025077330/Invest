<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="   中情局投资商业经验"
        android:textSize="25sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/viewline"
            android:layout_width="430dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:background="#666" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvall_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="产品金额"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/money_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvall_money"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="10"
                android:textColor="#F43636"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvall_money"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/money_count"
                android:text="万"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/one_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/money_count"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/oneimage" />

            <TextView
                android:id="@+id/one_imagecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/money_count"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/one_image"
                android:text="100" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/yqnlr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="预期年利润"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/yq_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/yqnlr"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="8.00"
                android:textColor="#F43636"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/yqnlr"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/yq_count"
                android:text="%"
                android:textSize="15sp" />

            <ImageView

                android:id="@+id/two_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/yq_count"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/twoimage" />

            <TextView
                android:id="@+id/two_imagecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/yq_count"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/two_image"
                android:text="100" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/sdq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="锁定期"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/three_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sdq"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="10"
                android:textColor="#F43636"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sdq"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/three_money"
                android:text="天"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/three_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/three_money"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/threeimage" />

            <TextView
                android:id="@+id/three_imagecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/three_money"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/three_image"
                android:text="100" />
        </RelativeLayout>

        <com.bw.invest.view.MyProgress
            android:id="@+id/myprogress"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            app:arc_color="#FF0000"
            app:circle_color="#3F51B5"
            app:stroke_width="20"
            app:text_color="#03A9F4"
            app:text_size="15sp" />


    </LinearLayout>


</LinearLayout>